{
  "name": "my-webpack-project",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "index.js",
  "nodemonConfig": {
    "ignore": [
      "./src/**/*_client.ts"
    ],
    "watch": [
      "./src",
      "./src/app/index.ts"
    ],
    "ext": ".ts"
  },
  "scripts": {
    "up": "docker-compose up -d --no-recreate --remove-orphans && npm run logs:dev",
    "down": "docker-compose down --rmi local",
    "migrate:staging": "docker-compose -f ./staging.docker-compose.yml up && docker-compose -f ./staging.docker-compose.yml down",
    "restart": "npm run down && npm run up",
    "bootstrap": "make bootstrap",
    "clean": "make clean",
    "build": "make build",
    "watch": "make watch",
    "logs:dev": "docker-compose logs -f migrator app",
    "logs:staging": "heroku logs --tail -a mospolytech-words-staging",
    "logs:production": "heroku logs --tail -a mospolytech-words"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/boom": "^7.3.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/redis": "^2.8.28",
    "@types/uuid": "^8.3.0",
    "@webpack-cli/generators": "^2.0.0",
    "autoprefixer": "^10.2.5",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^5.2.4",
    "css-minimizer-webpack-plugin": "^3.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.12",
    "postcss-loader": "^5.2.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.2",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.2",
    "@types/pg": "^7.14.11",
    "autobind-decorator": "^2.4.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "depd": "^2.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "knex": "^0.95.4",
    "pg": "^8.6.0",
    "redis": "^3.1.2",
    "uuid": "^8.3.2"
  }
}
